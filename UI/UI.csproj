        <EmbeddedResource Remove="assets\skillauto\**"/>
        <EmbeddedResource Remove="assets\data\LDPlayer\bangsetuptrain\**"/>
        <EmbeddedResource Remove="Lib\**"/>
        <EmbeddedResource Remove="LibFake\**" />
