        <Page Remove="assets\locitemban\**"/>
        <Page Remove="assets\skillauto\**"/>
        <Page Remove="assets\data\LDPlayer\bangsetuptrain\**"/>
        <Page Remove="Lib\**"/>
        <Page Remove="LibFake\**" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="assets\itemban\**"/>
        <None Remove="assets\itemdonkho\**"/>
